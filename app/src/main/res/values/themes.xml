<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AcilNotUygulamasi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="floatingActionButtonBackground">@color/my_light_primary</item>
        <item name="floatingActionButtonIconTint">@color/white</item>
        <item name="infoButtonTint">@color/my_light_primary</item>
        <item name="passwordCheckIconTint">@color/my_light_primary</item>
        <item name="destructiveButtonColor">@color/my_light_primary</item>
        <item name="noteInfoButtonTint">@color/my_light_primary</item>
    </style>

    <style name="Theme.AcilNotUygulamasi" parent="Base.Theme.AcilNotUygulamasi" />

    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/destructiveButtonColor</item>
        <item name="strokeColor">?attr/destructiveButtonColor</item>
    </style>

</resources>